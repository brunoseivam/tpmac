record(seq, "$(pcs)Abort") {
  field(DESC, "Abort")
  field(PRIO, "HIGH")
  field(DO1, "1")
  field(LNK1, "$(pcs)CmdAB.PROC PP MS")
  field(PINI, "YES")
}

record(seq, "$(pcs)Run") {
  field(DESC, "Run")
  field(PRIO, "HIGH")
  field(DO1, "1")
  field(LNK1, "$(pcs)CmdRN.PROC PP MS")
}

record(stringout, "$(pcs)CmdAB") {
  field(DTYP, "Soft Channel")
  field(OUT, "$(pcs)StrCmd PP MS")
  field(VAL, "A")
  field(FLNK, "$(pcs)Ready.PROC PP MS")
}

record(stringout, "$(pcs)CmdRN") {
  field(DTYP, "Soft Channel")
  field(OUT, "$(pcs)StrCmd PP MS")
  field(VAL, "R")
}

### Added by Sergey 2005/04/14 for fast scans and homing:

record(stringout, "$(pcs)Pmac") {
  field(DESC, "Coord.System pmac")
  field(DTYP, "Soft Channel")
  field(VAL, "$(pmac)")
}

record(longout, "$(pcs)Pcs") {
  field(DESC, "Coord.System Number")
  field(DTYP, "Soft Channel")
  field(VAL, "$(wrd)")
}
